{
  "name": "background-remover",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "vite",
    "prebuild": "rimraf dist",
    "build": "tsc && vite build",
    "preview": "vite preview --port 4040",
    "lint:js": "eslint --config ./.eslintrc.json src --ext .ts,.tsx,.js,.jsx",
    "lint:style": "npx stylelint \"src/**/*.{scss,css}\"",
    "lint": "npm run lint:js && npm run lint:style",
    "test:unit": "vitest run",
    "prehusky:install": "rimraf .husky",
    "husky:install": "npx husky install",
    "set-git-hook:prepush": "npx husky add .husky/pre-push \"npm run lint && npm run test:unit && npm run build && npm run prebuild\"",
    "set-git-hook:precommit": "npx husky add .husky/commit-msg \"npx --no-install commitlint --config commitlint.config.cjs --edit $1\"",
    "husky:init": "npm run husky:install && npm run set-git-hook:prepush && npm run set-git-hook:precommit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^21.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "sass": "^1.58.0",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended-scss": "^5.0.0",
    "stylelint-config-sass-guidelines": "^9.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.28.4"
  }
}
